    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch WebExtension",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "",
            "addonPath": "${workspaceFolder}/src"
        },
        {
            "name": "Compress extension",
            "type": "node-terminal",
            "command": "mkdir -p ${workspaceFolder}/build && zip -r -FS ${workspaceFolder}/build/${workspaceFolderBasename}.xpi * --exclude '*/.*' && exit",
            "cwd": "${workspaceFolder}/src",
            "request": "launch"
        },

    ]
}